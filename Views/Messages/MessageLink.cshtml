@model IEnumerable<EthioServices.Models.Message>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @if (item.sender.Contains(ViewBag.Sender))
                {
                    <div style="background-color: darkgreen; color: white;">
                        @Html.DisplayFor(modelItem => item.text)
                    </div>
                }
                @if (item.receiver.Contains(ViewBag.Sender))
                {
                    <div style="background-color: darkblue; color: white;">
                        @Html.DisplayFor(modelItem => item.text)
                    </div>
                }
                
                </td>
            </tr>
        }
        
    </tbody>

</table>

<a href="@Url.Action("Create", "Messages", new { id2 = ViewBag.Sender })">Send New Email</a>
